{
  "name": "poelink",
  "description": "PoeLink browser extension",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "npm run copy-wasm && wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare && npm run copy-wasm",
    "copy-wasm": "node -e \"const fs=require('fs');const p=require('path');const src=p.join(p.dirname(require.resolve('sql.js')),'sql-wasm.wasm');const dest=p.join(process.cwd(),'public','sql-wasm.wasm');fs.mkdirSync(p.dirname(dest),{recursive:true});fs.copyFileSync(src,dest);console.log('Copied sql-wasm.wasm to public/');\""
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "sql.js": "^1.11.0",
    "rehype-slug": "^6.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@wxt-dev/module-react": "^1.1.5",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "wxt": "^0.20.13"
  }
}
